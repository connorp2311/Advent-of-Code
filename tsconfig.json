{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"resolveJsonModule": true /* in case you are importing JSON files */,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": ["src/**/*"]
}
